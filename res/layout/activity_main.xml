<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@android:style/Theme.NoTitleBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bga1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.vietnamabc.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btnAlphabet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/btnalphabet"
            android:src="@drawable/btnalphabet" />

        <ImageButton
            android:id="@+id/btnWrite"
             android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnwrite"
            android:src="@drawable/btnwrite" />

        <ImageButton
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnread"
            android:src="@drawable/btnread" />

    </LinearLayout>

</LinearLayout>